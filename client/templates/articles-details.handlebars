<div class="container">
	<div class="row">
		<article class="col-md-8">
			<header>
				<div>
					<h1 class="text-center article-details-title">{{articles.sideA}} vs {{articles.sideB}}</h1>
					<h2>{{articles.title}}</h2>
				</div>
				<div class="article-details-createOn text-right">
					<h3>By {{user.name}}</h3>
					<p>Last Update: {{#date articles.createdOn}}{{/date}}</p>
				</div>
				<div>
					<iframe src="https://www.facebook.com/plugins/share_button.php?href=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&layout=button_count&size=large&mobile_iframe=true&width=105&height=28&appId"
							width="200" height="28" style="border:none;overflow:hidden" scrolling="no"
							frameborder="0"
							allowTransparency="true"></iframe>
				</div>
				<img class="article-details-img" src="{{articles.imageUrl}}" alt="">
				<div>
					<p class="article-detail-content">
						{{articles.content}}
					</p>
				</div>
				<div>
					<h3 class="text-center article-comments-border"><strong>Comments</strong></h3>
				</div>
				<div id="news-comment-box" class="comment-box">
					{{#each articles.comments}}
						<div class="row comment" id="{{_id}}">
							<div class="col-md-2 comment-avatar">
								<img src="{{author.userAvatar}}" alt="{{author.username}}"
									 class="img-responsive img-circle">
							</div>
							<div class="col-md-10 comment-content">
								<p class="inline-block"><span class="bold">{{author.username}}</span> <span
										class="italic small">{{#date createdOn}}{{/date}}</span></p>
								{{#deleteCommentBtn ../user author.userId}}
									<p class="btn-news-delete-comment inline-block pull-right small btn-comment-delete"
									   onclick="return confirm('Are you sure you want to delete this comment?')">
										Delete
									</p>
								{{/deleteCommentBtn}}
								<p>{{content}}</p>
							</div>
						</div>
					{{/each}}
				</div>
				{{#if user}}
					<div id="article-comment-box" class="row new-comment-box">
						<div class="col-md-2 comment-avatar">
							<img src="{{user.profilePicture}}" alt="{{user.username}}" class="img-responsive img-circle">
						</div>
						<div class="col-md-10 comment-content">
							<p class="inline-block"><span class="bold">{{user.username}}</span></p>
							<div id="article-comment-form">
								<textarea id="article-comment-content" cols="30" rows="2" placeholder="Type your comment here..." class="form-control"></textarea>
							</div>
						</div>
						<div class="text-right">
							<button class="btn btn-success btn-xs" id="btn-article-comment">Submit</button>
						</div>
					</div>
				{{else}} {{#unless articles.comments.length}}
					<h4 class="text-center bold">No comments yet! Sign in and be the first to comment...</h4>
				{{/unless}} {{/if}}
			</header>
		</article>
		<aside class="article-details-aside col-md-4">
			<h4 class="text-center article-aside-lineups"><strong>STARTING LINE-UPS</strong></h4>
			<div class="row">
				<div class="col-sm-6 text-center">
					<span class="article-aside-team">{{articles.sideA}}</span>
					{{#each articles.lineupsA}}
						<ul class="text-center article-aside-team-list">
							<li>
								<span>{{this}}</span>
							</li>
						</ul>
					{{/each}}
				</div>
				<div class="col-sm-6 text-center">
					<span class="article-aside-team">{{articles.sideB}}</span>
					{{#each articles.lineupsB}}
						<ul class="text-center article-aside-team-list">
							<li>
								<span>{{this}}</span>
							</li>
						</ul>
					{{/each}}
				</div>
			</div>
			<div class="row">
				<h4 class="article-aside-injured text-center"><strong>INJURED</strong></h4>
				<div class="col-sm-6">
					{{#each articles.injuredA}}
						<ul class="text-center article-aside-team-list">
							<li>
								<span>{{this}}</span>
							</li>
						</ul>
					{{/each}}
				</div>
				<div class="col-sm-6">
					{{#each articles.injuredB}}
						<ul class="text-center article-aside-team-list">
							<li>
								<span>{{this}}</span>
							</li>
						</ul>
					{{/each}}
				</div>
			</div>
			<h4 class="text-center article-aside-prediction"><strong>MATCH PREDICTION</strong></h4>
			<p class="text-center"><strong>{{articles.matchPrediction}}</strong></p>
		</aside>
	</div>
</div>