<div class="container">
    <div class="row">
        <h1>{{category}}</h1>
        <hr />
    </div>
    <div class="forum-section panel panel-default row">
        <div class="col-md-2 text-center">
            <img src="{{author.userAvatar}}" class="img-responsive img-circle" alt="{{author.username}}">
            <hr class="post-picture-hr" />
            <p class="bold no-margin-bottom">{{author.username}}</p>
            <p class="small italic">Posted on: {{#date createdOn}}{{/date}}</p>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-10">
                    <h2 class="thread-title">{{title}}</h2>
                </div>
                <div class="col-md-2 text-right like-icons">
                    <span class="like-icon-post"><span class="glyphicon glyphicon-thumbs-up"></span><span class="likes-count">&nbsp;&nbsp;{{likes.length}}&nbsp;&nbsp;</span></span>
                    <span class="like-icon-post"><span class="glyphicon glyphicon-thumbs-down"></span><span class="dislikes-count">&nbsp;&nbsp;{{dislikes.length}}</span></span>
                </div>
            </div>
            <p class="thread-post-content">{{content}}</p>
            <hr class="post-picture-hr" />
            <div class="text-right post-options">
                <button class="btn btn-xs btn-danger btn-black">Edit</button>
                <button class="btn btn-xs btn-danger btn-black">Delete</button>
                <button class="btn btn-xs btn-danger btn-black">Report</button>
            </div>
        </div>
    </div>
    {{#each posts}}
    <div class="forum-section panel panel-default row">
        <div class="col-md-2 text-center">
            <img src="{{author.userAvatar}}" class="img-responsive img-circle" alt="{{author.username}}">
            <hr class="post-picture-hr" />
            <p class="bold no-margin-bottom">{{author.username}}</p>
            <p class="small italic">Posted on: {{#date createdOn}}{{/date}}</p>
        </div>
        <div class="col-md-10">              
            <p class="thread-post-content">{{content}}</p>
            <hr class="post-picture-hr" />
            <div class="text-right post-options">
                 <div class="inliine-block like-icons">
                    <span class="like-icon-post"><span class="glyphicon glyphicon-thumbs-up"></span><span class="likes-count">&nbsp;&nbsp;{{likes.length}}&nbsp;&nbsp;</span></span>
                    <span class="like-icon-post"><span class="glyphicon glyphicon-thumbs-down"></span><span class="dislikes-count">&nbsp;&nbsp;{{dislikes.length}}</span></span>
                </div>
                <button class="btn btn-xs btn-danger btn-black">Edit</button>
                <button class="btn btn-xs btn-danger btn-black">Delete</button>
                <button class="btn btn-xs btn-danger btn-black">Report</button>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="forum-section new-post-panel panel panel-default row">
        <div class="col-md-1 text-center new-post-avatar">
            <img src="{{author.userAvatar}}" class="img-responsive img-circle" alt="{{author.username}}">
            <hr class="post-picture-hr" />
            <p class="bold no-margin-bottom">{{author.username}}</p>
        </div>
        <div class="col-md-11">              
            <textarea name="new-post-input" id="new-post-input" cols="30" rows="3" class="form-control"></textarea>
            <div class="text-right post-options">
                <button class="btn btn-xs btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>