<div class="container">
    <div class="row">
        <h1>{{category}}</h1>
        <hr />
    </div>
    <div class="forum-section panel panel-default row">
        <div class="col-md-3 text-center">
            <img src="{{imageUrl}}" class="img-responsive img-thread-header" alt="{{author.username}}">
            <hr class="post-picture-hr" />
            <p class="bold no-margin-bottom">By {{author.username}}</p>
            <p class="small italic">Posted on: {{#date createdOn}}{{/date}}</p>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-10">
                    <h2 class="thread-title">{{title}}</h2>
                </div>
                <div class="col-md-2 text-right like-icons">
                    <span id="btn-thread-like" class="like-icon-post"><span class="glyphicon glyphicon-thumbs-up"></span><span id="likes-count" class="likes-count">{{likes.length}}</span></span>
                    <span id="btn-thread-dislike" class="like-icon-post"><span class="glyphicon glyphicon-thumbs-down"></span><span id="dislikes-count" class="dislikes-count">{{dislikes.length}}</span></span>
                </div>
            </div>
            <p class="thread-post-content pre-wrap">{{content}}</p>
            <div class="text-right post-options">
                {{#if updatedOn}}
                <span class="small grey-text italic">Last updated on: {{#date updatedOn}}{{/date}}</span> {{/if}}
                <span>&nbsp;&nbsp;</span>
                <a class="small grey-text" href="#!/forum/edit/{{_id}}">Edit</a>
                <span>&nbsp;</span>
                <a class="small grey-text" onclick="return confirm('Are you sure you want to delete this thread?')" href="#!/forum/delete/{{_id}}">Delete</a>
            </div>
        </div>
    </div>
    <div id="posts-container">
        {{#each posts}}
        <div id="{{_id}}" class="forum-section forum-post panel panel-default row">
            <div class="col-md-1 text-center post-avatar">
                <img src="{{author.userAvatar}}" class="img-responsive img-circle" alt="{{author.username}}">
            </div>
            <div class="col-md-11 post-content">
                <p class="thread-post-content pre-wrap">{{content}}</p>
                <hr class="post-picture-hr" />
                <div class="post-options row">
                    <div class="col-md-10 no-padding">
                        <span class="bold">{{author.username}}</span>
                        <span class="small italic">Posted on: {{#date createdOn}}{{/date}}</span> {{#if updatedOn}}
                        <span class="small italic"> | Last updated on: {{#date updatedOn}}{{/date}}</span> {{/if}}
                        <span class="btn-edit-post small grey-text">Edit</span>
                        <span onclick="return confirm('Are you sure you want to delete this post?')" class="btn-delete-post small grey-text">Delete</span>
                    </div>
                    <div class="col-md-2 text-right no-padding">
                        <div class="inline-block like-icons-post">
                            <span class="like-icon-post btn-like-post"><span class="glyphicon glyphicon-thumbs-up"></span><span class="likes-count">{{likes.length}}</span></span>
                            <span class="like-icon-post btn-dislike-post"><span class="glyphicon glyphicon-thumbs-down"></span><span class="dislikes-count">{{dislikes.length}}</span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="forum-section new-post-panel panel panel-default row">
        <div class="col-md-1 text-center post-avatar">
            <img src="{{author.userAvatar}}" class="img-responsive img-circle" alt="{{author.username}}">
        </div>
        <div class="col-md-11 new-post-col">
            <div id="form-new-post">
                <textarea name="new-post-input" id="new-post-input" placeholder="Type your post content here..." cols="30" rows="3" class="form-control"></textarea>
            </div>
            <div class="text-right post-options">
                <button id="btn-new-post" class="btn btn-xs btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>