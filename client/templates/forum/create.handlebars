<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default panel-credentials">
                <div class="panel-body">
                    <h2 class="text-center">Create a new Thread</h2>
                    <hr />
                    <div id="form-create-thread-title" class="form-group">
                        <input type="text" placeholder="Title" id="create-thread-title" class="form-control">
                    </div>
                    <div id="form-create-thread-image-url" class="form-group">
                        <input type="text" placeholder="Image Url" id="create-thread-image-url" class="form-control">
                    </div>
                    <div id="form-create-thread-tags" class="form-group">
                        <input type="text" placeholder="Tags (separeted by commas)" id="create-thread-tags" class="form-control">
                    </div>
                    <div id="form-thread-category" class="form-group">
                        <label class="grey-text" for="create-thread-category">Thread Category:</label>
                       <select name="create-thread-category" id="create-thread-category" class="form-control">
                           <option value="Free Zone">Free Zone</option>
                           <option value="Games">Premier League Games</option>
                           <option value="Teams">Teams</option>
                           <option value="Media Watch">Media Watch</option>
                           <option value="Website">Website</option>
                       </select>
                    </div>
                    <div id="form-create-thread-content" class="form-group">
                        <textarea id="create-thread-content" placeholder="Type thread content here..." cols="30" rows="10" class="form-control" />
                    </div>
                    <div class="text-center">
                        <button id="btn-thread-create" type="button" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>