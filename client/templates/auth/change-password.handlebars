<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default panel-credentials">
                    <div class="panel-body">
                        <h2 class="text-center">Change Password</h2>
                        <hr />
                        <div id="form-old-password" class="form-group">
                            <input type="password" placeholder="Old Password" id="old-password" class="form-control">
                        </div>
                        <div id="form-new-password" class="form-group">
                            <input type="password" placeholder="New Password" id="new-password" class="form-control">
                        </div>
                        <div id="form-confirm-new-password" class="form-group">
                            <input type="password" placeholder="Confirm new Password" id="confirm-new-password" class="form-control">
                        </div>                        
                        <div class="text-center">
                            <button id="btn-change-password" type="button" class="btn btn-success">Submit</button>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>