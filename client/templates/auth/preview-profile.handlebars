<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="row text-center">
                <img src="{{profilePicture}}" class="img-circle profile-picture" alt="{{username}}">
            </div>
            <div class="panel panel-default panel-profile text-center">
                <h2 class="text-center">{{username}}</h2>
                <p class="bold">{{#if admin}}ADMIN{{else}}Regular User{{/if}}</p>
                <p class="italic">Registerd on: {{#date registeredOn}}{{/date}}</p>
                <p>E-Mail: {{email}}</p>
                <p>Forum posts: {{forumPosts}}</p>
            </div>
        </div>
    </div>
</div>