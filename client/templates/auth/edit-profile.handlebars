<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default panel-credentials">
                    <div class="panel-body">
                        <h2 class="text-center">Edit User Info</h2>
                        <hr />
                        <div id="form-edit-username" class="form-group">
                            <input type="text" placeholder="Username" value="{{username}}" id="edit-username" class="form-control">
                        </div>
                        <div id="form-edit-email" class="form-group">
                            <input type="text" placeholder="E-Mail" value="{{email}}" id="edit-email" class="form-control">
                        </div>
                        <div id="form-edit-profile-pic" class="form-group">
                            <input type="text" placeholder="Profile Picture URL (Leave empty to use default)" id="edit-profile-picture" class="form-control">
                        </div>
                        {{#if admin}}
                        <div id="form-edit-admin-status" class="form-group">
                            <select name="edit-admin-status" id="edit-admin-status" class="form-control">
                                <option value="false">Regular User</option>
                                <option value="true">Admin</option>
                            </select>
                        </div>
                        {{/if}}
                        <div class="text-center">
                            <button id="btn-edit-profile" type="button" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>